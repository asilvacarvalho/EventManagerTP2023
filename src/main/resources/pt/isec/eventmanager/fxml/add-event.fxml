<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<AnchorPane maxWidth="800.0" minWidth="800.0" prefWidth="800.0" styleClass="mainBorderPane"
            xmlns="http://javafx.com/javafx/18.0.2" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pt.isec.eventmanager.client.AddEventController">
    <stylesheets>
        <URL value="@../css/global.css"/>
    </stylesheets>
    <VBox alignment="TOP_CENTER" prefHeight="217.6" prefWidth="800.0" spacing="10.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <GridPane alignment="CENTER" hgap="10" vgap="10">

            <Label text="Name" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Local" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="locationField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Date" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <DatePicker fx:id="datePicker" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text="Start Time" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="startTimeField" promptText="HH:mm" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <Label text="End Time" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextField fx:id="endTimeField" promptText="HH:mm" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            <columnConstraints>
                <ColumnConstraints/>
                <ColumnConstraints/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>
        </GridPane>

        <Button onAction="#handleAddEvent" style="-fx-pref-width: 100px;" text="Adicionar"/>
    </VBox>
</AnchorPane>
