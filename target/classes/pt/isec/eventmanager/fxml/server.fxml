<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="800.0" prefWidth="800.0" stylesheets="@../css/global.css"
            xmlns="http://javafx.com/javafx/18.0.2"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.isec.eventmanager.server.ServerController">
    <VBox alignment="CENTER" prefHeight="800.0" prefWidth="800.0" spacing="10.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <TextField fx:id="clientTcpPortField" promptText="TCP Port for Clients Connections"/>
        <TextField fx:id="regPortField" promptText="Local Registry Port"/>
        <TextField fx:id="dbLocationField" promptText="Database Location"/>
        <TextField fx:id="rmiBackupServiceNameField" promptText="RMI Backup Service Name"/>
        <Button fx:id="startButton" mnemonicParsing="false" onAction="#handleStartButtonAction" text="Start"/>
        <TextArea fx:id="consoleTextArea" editable="false" prefHeight="400.0" prefWidth="400.0" wrapText="true"/>
        <Label fx:id="errorLabel" textFill="red" visible="false">
            <font>
                <Font size="12.0"/>
            </font>
        </Label>
        <padding>
            <Insets left="15.0" right="15.0"/>
        </padding>
    </VBox>
</AnchorPane>
